<br><br><br>
    <div class="container">
      <div class="row">
          <div class="page-header">

              <table class="table table-stripped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>name</th>
                    <th>Email</th>
                    <th>Order Time</th>                   
                    <th>Operations</th>
                  </tr>
                </thead>
                <tbody>
                  
                  <% @orders.each do |order|%>
                  <tr>
                    <th><%=order.id %></th>
                    <th><%=order.name %></th>
                    <th><%=order.email %></th>
                    <th><%=order.created_at %></th>
                    <th>
                       <%= link_to 'Show' , orders_show_path(order.id), class: "btn btn-default"%> 
                       <%=link_to 'Delete', order_delete_path(order.id), class: "btn btn-default"%>
                    </th>
                  </tr>
                  <%end%>
                  <tr>
                    <%=link_to 'Previous Page', orders_admin_path(page: [@page-1,1].max), class: "btn btn-default"%>
                    Page <%= @page %> 
                    <%= link_to 'Next Page', orders_admin_path(page: [@page+1,@total_pages].min ), class: "btn btn-default"%>
                    Total <%=@total_pages%>
                    <%=form_tag(orders_admin_path ,method: 'get') do%>
                    To <input id="page" name="page" value=<%=@page%> size="2"> page
                    <button type="submit" class="btn btn-default" onclick="return checkInput();">Go</button>
                    <%end%>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3" >
            </div>
            <div class="col-md-6">
              
            </div>
          </div>
      </div>